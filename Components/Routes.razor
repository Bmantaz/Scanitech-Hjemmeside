@using Scanitech_Hjemmeside.Components.Layout
@using Scanitech_Hjemmeside.Components.Pages

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeData">
        @* Nu hvor vi har importeret Layout namespacet, kan vi bruge MainLayout direkte *@
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Siden blev ikke fundet</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            @* Refererer direkte til din NotFound komponent i Pages *@
            <Scanitech_Hjemmeside.Components.Pages.NotFound />
        </LayoutView>
    </NotFound>
</Router>